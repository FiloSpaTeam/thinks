%nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only= t '.toggle_navigation'
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to content_for?(:title) ? yield(:title) : "Think", root_url, :class => "navbar-brand"
    / Collect the nav links, forms, and other content for toggling
    .navbar-collapse.collapse.navbar-responsive-collapse
      %ul.nav.navbar-nav
        %li{:class => active_link_if_current(projects_path)}
          = link_to t(".projects"), projects_path
        %li{:class => active_link_if_current(thinkers_path)}
          = link_to t(".thinkers"), thinkers_path
      %ul.nav.navbar-nav.navbar-right
        - if thinker_signed_in?
          %li 
            = link_to t(".donate"), projects_path
          %li.dropdown
            = link_to "javascript:;", :class => "dropdown-toggle", "data-toggle" => :dropdown, :role => :button, "aria-haspopup" => :true, "aria-expanded" => :false do
              = t(".profile")
              = content_tag(:span, "", :class => :caret)
            %ul.dropdown-menu
              %li= link_to t(".show"), current_thinker
              %li
                %a{:href => "#"} My projects
              %li
                %a{:href => "#"} Settings
              = menu_divider
              %li= link_to t(".logout"), destroy_thinker_session_path, :method => :delete
        - else
          %li{current_page?(new_thinker_registration_path) ? { :class => :active } : {} }
            = link_to t(".sign_up"), new_thinker_registration_path
          %li{current_page?(new_thinker_session_path) ? { :class => :active } : {} }
            = link_to t(".sign_in"), new_thinker_session_path

