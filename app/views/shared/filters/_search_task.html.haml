%li{ :role => "presentation" }
  %a.dropdown-toggle{ "data-toggle" => "dropdown", :role => "button", "aria-haspopup" => "true", "aria-expanded" => "false" }
    = t(".task")
    %span.caret
  %div.dropdown-menu.panel.panel-default{ :style => "padding: 0;" }
    .panel-heading
      = text_field_tag 'filters[task_title]', '', class: "form-control filterrific-periodically-observed", placeholder: t("search"), autocomplete: 'off'
    %ul.list-group.scrollbar
      - @project.tasks.each do |task|
        %li.list-group-item
          = link_to("filterrific[task_id]" => task, method: :get, remote: true) do
            = task.title
