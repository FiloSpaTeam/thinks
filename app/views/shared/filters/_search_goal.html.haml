%li{ :role => "presentation" }
  %a.dropdown-toggle{ "data-toggle" => "dropdown", :role => "button", "aria-haspopup" => "true", "aria-expanded" => "false" }
    = t(".goal")
    %span.caret
  %div.dropdown-menu.panel.panel-default{ :style => "padding: 0;" }
    .panel-heading
      = text_field_tag 'filters[goal_title]', '', class: "form-control filterrific-periodically-observed", placeholder: t("search"), autocomplete: 'off'
    %ul.list-group.scrollbar
      - @project.goals.each do |goal|
        %li.list-group-item
          = link_to("filters[goal_id]" => goal, method: :get, remote: true) do
            = goal.title
