.well
  %h3
    General filters
  %h4
    Page filters
  - if current_page?(project_statistic_path)
    .row
      = f.label t('.print_first_section'), :class => "control-label col-md-12" do
        = f.check_box(:with_first_section, {}, true, false)
        = t ".print_first_section"
    .row
      = f.label t('.print_second_section'), :class => "control-label col-md-12" do
        = f.check_box(:with_second_section, {}, true, false)
        = t ".print_second_section"
    .row
      = f.label t('.print_third_section'), :class => "control-label col-md-12" do
        = f.check_box(:with_third_section, {}, true, false)
        = t ".print_first_section"
