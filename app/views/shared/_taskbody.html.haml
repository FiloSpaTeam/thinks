= markdown(task.description)
.margin-top-20
  - if (task.thinker == current_thinker || scrum_master?(task.project)) && current_thinker.ban(task.project).nil?
    - if task.deleted?
      = link_to 'Reopen', reopen_task_path(task), :method => 'put', :class => 'btn btn-primary'
      = link_to 'Delete', task_path(task), :method => 'delete', :class => 'btn btn-danger'
    - else
      = link_to 'Edit', edit_task_path(task), :class => 'btn btn-primary'
      = link_to 'Close', task_path(task), :method => 'delete', :class => 'btn btn-danger'
%hr
