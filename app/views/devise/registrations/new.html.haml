.row
  .col-sm-6.col-xs-12.col-sm-offset-3.col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-body
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          %h1= t ".sign_up"
          = devise_error_messages!
          .form-group
            = f.label :name
            = f.email_field :name, autofocus: true, class: "form-control"
          .form-group
            = f.label :email
            = f.email_field :email, class: "form-control"
            - if devise_mapping.registerable?
              %p.help-block
                = link_to t(".already_signed_up"), new_session_path(resource_name)
          .form-group
            = f.label :password
            = f.password_field :password, autocomplete: "off", class: "form-control"
            - if @minimum_password_length
              %p.help-block
                = t "char_minimum", chars: @minimum_password_length
          .form-group
            = f.label :password_confirmation
            = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"
          = f.submit t(".sign_up"), class: "btn btn-primary"
