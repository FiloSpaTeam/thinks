= render partial: 'shared/projectbar', locals: { project: @project }
.row
  .col-md-4
    = render partial: 'shared/projectstatuspanel', locals: { project: @project }
  .col-md-8
    .panel.panel-default.hidden-xs
      .panel-body
        - if @sprints.size >= 2
          - sprints_chart_data = @sprints.limit(10).offset(1).group(:created_at).order(:created_at).sum(:obtained)
          - puts sprints_chart_data.transform_keys { |key| key.strftime('%B %d') }
          = line_chart sprints_chart_data.transform_keys { |key| key.strftime('%B %d') }, height: '180px', discrete: true, library: { hAxis: { textPosition: 'none', format: 'dd/MM' }, chartArea: { width: '90%', height: '80%' }, vAxis: { gridlines: { color: '#EEE' } } }
    .panel.panel-default
      .panel-body{ :style => 'padding: 0;' }
        = render_filterrific_spinner
        %table.table.table-condensed.table-hover#filterrific_results
          = render partial: 'list', locals: { sprints: @sprints }
    = paginate @sprints, :remote => true
