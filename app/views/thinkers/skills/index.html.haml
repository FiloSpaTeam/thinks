= render partial: 'shared/profileheader', locals: { thinker: @thinker }
.row
  .col-md-4
    = render partial: 'shared/profilebar', locals: { thinker: @thinker }
  .col-md-8
    .panel.panel-default
      .panel-heading
        %h4
          %strong
            = t ".your_skills"
      .panel-body
        - if @thinker.skills.count < 5
          = form_for @thinker, url: thinker_skills_path(@thinker), action: :create do |f|
            = f.collection_select :skill_ids, Skill.all, 'id', 't_name', {}, class: 'form-control'
            = f.submit
