- content_for :page_content do
  = form_for @project, url: project_settings_images_path, method: :post, :html => { :class => '' } do |f|
    .form-group
      = f.label :logo, :class => 'control-label'
      -# = f.attachinary_file_field :logo
      %small#help-logo.form-text.text-muted
        = t "projects.form_text_logo"
    .form-group
      = link_to 'javascript:;', 'data-toggle' => 'popover', 'data-placement' => 'right', 'data-content' => t('projects.info_main_image', image_url: image_url('/template_thinks_main_image.svg')), 'data-html' => 'true' do
        = icon('fas', 'info-circle')
      = f.label :main_image, :class => 'control-label'
      -# = f.attachinary_file_field :main_image
      %small#help-main-image.form-text.text-muted
        = t "projects.form_text_main_image"
    = f.submit t('update'), :class => 'btn btn-primary'
    = link_to t('cancel'), projects_path, :class => 'btn btn-default'

= render partial: 'projects/layout_settings'
