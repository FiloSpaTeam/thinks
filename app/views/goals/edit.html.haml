- content_for :page_actions do
  - if thinker_signed_in? && @project.assigned_roles.where(thinker: current_thinker).where(team_role: TeamRole.scrum_master.first).exists?
    %li.float-left
      = link_to new_project_goal_path(@project), :class => "line-height-25 line-height-35" do
        = icon('fas', 'plus-square-o', class: 'fa-lg dark-grey')
        %span.hidden-xs
          = t('new')

= render partial: 'shared/projectbar', locals: { project: @goal.project }
.row
  .col-md-4
    = render partial: 'shared/goalstatuspanel', locals: { goal: @goal }
  .col-md-8
    = render :partial => 'form'
