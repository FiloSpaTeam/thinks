%header.masthead.text-center
  .header-content.text-center
    .header-content-inner.ml-sm-auto.mr-sm-auto
      %h1.mt-0.mb-0
        = t('.heading_title').html_safe
      %hr.mx-auto
      %p.ml-sm-auto.mr-sm-auto
        = t('.heading_subtitle').html_safe
      - unless thinker_signed_in?
        = link_to new_thinker_registration_path, class: 'btn btn-primary btn-lg' do
          = t(".sign_up")
      - else
        = link_to new_project_path, class: 'btn btn-primary btn-lg' do
          = t(".start_a_new_project")

%section.bg-primary
  .container
    .row
      .col-lg-8.mx-auto.text-center
        %h2.section-heading.text-white
          = t('.section_1_title').html_safe
        %hr.light
        %p.text-faded
          = t('.section_1_description').html_safe
        %a.btn.btn-default.btn-xl{href: "#services"}
          Understand how

%section
  .container
    - for i in 1..4 do
      = render partial: 'start/feature', locals: { direction: i % 2 == 0 ? 'rtl' : 'ltr', number: i }
%hr
%section
  .container
    .row.mb-3
      .col-md-5.col-sm-5.col-xs-12.text-center.text-sm-right
        = image_tag "coins"
      .col-md-2.col-sm-2.col-xs-12.mt-auto.mb-auto.text-center
        %h1.text-center
          Pricing
    .row
      .col-lg-4.col-md-4.col-sm-4.col-xs-12
        = render partial: 'start/price', locals: { offer: @offers[0] }
      .col-lg-4.col-md-4.col-sm-4.col-xs-12
        = render partial: 'start/price', locals: { offer: @offers[1] }
      .col-lg-4.col-md-4.col-sm-4.col-xs-12
        = render partial: 'start/price', locals: { offer: @offers[2] }
