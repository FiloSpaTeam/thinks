- content_for :page_actions do
  %li.nav-item.ml-1
    %a.btn.btn-outline-secondary{ role: "button", 'data-toggle': 'collapse', 'aria-expanded': params[:filters].try(:any?) ? 'true' : 'false', 'aria-controls': 'collapseFilters', href: '#collapseSearch' }
      = icon('fas', 'search')
      %span.hidden-xs
        = t('filters.search')
  - if thinker_signed_in? && current_thinker.ban(@project).nil? && @project.participant?(current_thinker)
    %li.nav-item.ml-1
      = link_to new_project_task_path, title: 'New task', class: 'btn btn-outline-primary' do
        = icon('fas', 'plus')
        %span.hidden-xs
          = t('new')

- content_for :page_content do
  #div-container-list
    = smart_listing_render :tasks

= render partial: 'projects/layout'
