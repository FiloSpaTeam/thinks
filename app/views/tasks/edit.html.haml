- content_for :page_actions do
  - if thinker_signed_in? && current_thinker.ban(@task.project).nil? && @task.project.participant?(current_thinker)
    %li.nav-item.ml-1
      = link_to new_project_task_path(@task.project), class: 'btn btn-primary' do
        = icon('fas', 'plus')
        %span
          = t('new')

- content_for :page_content do
  = render :partial => 'form', locals: { url: project_task_path }

= render partial: 'projects/layout'
