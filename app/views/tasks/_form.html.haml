= form_for [@project, @task], :html => { :class => '' } do |f|
  .form-group
    = f.label :title, :class => "control-label"
    = f.text_field :title, :class => "form-control", :placeholder => "My simple title", "aria-describedby" => "help-title"
    %span#help-title.help-block= t "char_limit", chars: @chars_max_title
  .form-group
    = f.label :description, :class => "control-label"
    = f.text_area :description, :class => 'form-control', :rows => 15, :placeholder => "My beautiful and long description that help others to understand what i'm sharing.", "aria-describedby" => "help-description"
    %span#help-description.help-block= t "char_minimum", chars: @chars_min_description
  .form-group
    = f.label :task_id, t('.task_parent'),:class => 'control-label'
    = f.select :task_id, options_from_collection_for_select(@task.project.tasks, 'id', 'description', @task.task_id), {include_blank: true}, :class => "form-control"
  - if [Status.backlog.first, Status.release.first].include?(@task.status)
    .form-group
      = f.label :workload_id, t('.workload'),:class => 'control-label'
      = f.select :workload_id, options_from_collection_for_select(Workload.all, 'id', 'description', @task.workload_id), {include_blank: '?'}, :class => "form-control"
  .form-group
    = f.submit nil, :class => "btn btn-primary"
