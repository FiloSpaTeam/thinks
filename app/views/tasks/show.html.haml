- content_for :page_actions do
  - if (@task.thinker == current_thinker || scrum_master?(@task.project)) && current_thinker.ban(@task.project).nil?
    - if @task.deleted?
      %li.nav-item.ml-1
        = link_to reopen_task_path(@task), :method => 'put', class: 'btn btn-secondary' do
          = icon('fas', 'history', t('reopen'))
      %li.nav-item.ml-1
        = link_to task_path(@task), :method => 'delete', data: { confirm: t('are_you_sure') }, class: 'btn btn-danger' do
          = icon('fas', 'trash-alt', t('delete'))
    - elsif !@task.done?
      %li.nav-item.ml-1
        %a.btn.btn-default{ role: "button", 'data-toggle': 'modal', href: "#modal-discard-task-#{ @task.id }" }
          = icon('fas', 'times-circle', t('discards'))
      - content_for :page_modals do
        = render partial: 'tasks/modal_discard', locals: { task: @task }
      %li.nav-item.ml-1
        = link_to edit_task_path(@task), class: 'btn btn-primary' do
          = icon('fas', 'edit', t('edit'))

- content_for :page_content do
  = markdown(@task.description)
  %h5.font-weight-bold
    = t('tasks.comments')
  - if @task.project.part_of_team?(current_thinker) && current_thinker.ban(@task.project).nil? && !@task.deleted?
    = render :partial => 'comments/form'
  %table.table.table-sm.mt-2#comments-list
    %tbody
      - if @comments.empty?
        %tr.warning
          %td.text-center
            %strong
              = t('comments.no_comments')
      - @comments.each_with_index do |comment, index|
        = render partial: 'comments/comment', locals: { comment: comment, task: @task }

= render partial: 'projects/layout'
