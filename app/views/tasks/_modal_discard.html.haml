.modal.fade{ id: "modal-discard-task-#{ task.id }", tabindex: "-1", role: "dialog" }
  .modal-dialog{ role: "document" }
    .modal-content
      = form_for [@project, task], html: { method: :delete } do |f|
        .modal-header
          %h5.modal-title= t( ".title", title: task.title )
          %button{type: "button", class: "close", "data-dismiss": "modal", "aria-label": t('close')}
            %span{"aria-hidden": "true"} &times;
        .modal-body
          = t ".body"
          = text_area_tag 'task[reason]', nil, rows: 10, class: 'form-control'

        .modal-footer
          %button.btn.btn-default{type: "button", "data-dismiss": "modal"}
            = t 'close'
          = f.submit t('discards'), class: 'btn btn-warning'
